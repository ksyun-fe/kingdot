@import "../variables.styl";
@import '../../common/mixin.styl';

$-btn-types = primary success warning danger
$-btn-gradient := $-button-type == 'gradient'
.kd-btn-group
    display flex
    justify-content start
    .kd-btn-default
        margin-left -1px
        border-radius 0
        // background $-button-group-default-color
        &:focus:not(.kd-btn-active)
        &:hover:not(.kd-btn-active)
            z-index 2
            background $-button-group-default-hover-color
            if $-btn-gradient
                border: none
                span
                    display: inline-block
                    padding 1px
        &:active:not(.kd-btn-active)
            background $-button-group-default-active-color
    .kd-btn-default:first-child
        margin-left 0
        border-radius $-button-border-radius 0 0 $-button-border-radius
    .kd-btn-default:last-child
        border-radius 0 $-button-border-radius $-button-border-radius 0
    
    for type in $-btn-types
        .kd-btn-{type}
            border 1px
            border-radius 0
        .kd-btn-{type}:first-child
            border-radius $-button-border-radius 0 0 $-button-border-radius
        .kd-btn-{type}:last-child
            border-radius 0 $-button-border-radius $-button-border-radius 0
        .kd-btn-{type}+.kd-btn-{type}
            &:before
                content ""
                position absolute
                left -1px
                top 5px
                width 1px
                height calc(100% - 10px)
                background $-button-group-line-color
                border-radius 2px

.kd-btn-group-radio
.kd-btn-group-checkbox
    position relative
    .kd-btn-default
        &:hover
            color $-button-primary-color
    .kd-btn-active
        background $-button-primary-color
        color $-button-group-active-color
        border-color $-button-primary-color
        if $-btn-gradient
            border: none
            span
                display: inline-block
                padding 1px
        &:hover
            color $-button-group-active-color
        &:before
            content:''
            width: 1px 
            position: absolute
            left -1px
            top 5px
            bottom 5px
            background: $-button-group-active-line-color
    .kd-btn-active:first-child
        &:before
            display: none
    .kd-btn-disabled
        background $-button-disabled-background-color
        border-color $-button-border-color
        color $-button-disabled-color
        &:hover
        &:focus
        &:active
            background $-button-disabled-background-color !important
            color $-disabled-color  !important
            border-color $-button-border-color !important
            cursor: not-allowed
        &.kd-btn-active
            background $-button-primary-color
            color $-button-group-active-color
            border-color $-button-primary-color
            opacity 0.5
            &:hover
            &:focus
            &:active
                background $-button-primary-color !important
                color $-button-group-active-color !important
                border-color $-button-primary-color !important