@import "../variables.styl";

.kd-checkbox
    cursor pointer
    white-space nowrap
    font-size $-checkbox-font-size
    &.is-indeterminate, &.is-checked
        .kd-checkbox-wrap
            border-color $-checkbox-checked-input-border-color
            background $-checkbox-checked-input-background-color
    &.is-indeterminate
        .kd-checkbox-wrap:before
                border-bottom none
                transform rotate(90deg) scale(1)
    &.is-checked
        .kd-checkbox-wrap:before
                transform rotate(45deg) scale(1)
    &.is-disabled
        cursor not-allowed
        .kd-checkbox-wrap
            border-color $-checkbox-disabled-input-border-color
            background-color $-checkbox-disabled-input-background-color
            &:before
                border-color $-checkbox-disabled-icon-color

.kd-checkbox-wrap
    width $-checkbox-input-width
    height $-checkbox-input-height
    display inline-block
    position relative
    box-sizing border-box
    vertical-align -2px
    background $-checkbox-default-input-background-color
    border 1px solid $-checkbox-default-input-border-color
    border-radius 2px
    transition all .25s ease-in-out
    &:before
        content: ''
        display block
        box-sizing content-box
        position absolute
        top 1px
        left 4px
        width 3px
        height 7px
        border 1px solid $-checkbox-checked-icon-color
        border-top none
        border-left none
        transform-origin center
        transform rotate(45deg) scale(0)
        transition all .25s ease-in-out

.kd-checkbox-input
    position absolute
    left 0
    right 0
    width 0
    height 0
    opacity 0
    outline none
.kd-checkbox-text
    display inline-block
    margin-left 8px
