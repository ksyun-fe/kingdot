@import "../variables.styl";

.kd-checkbox
    display inline-flex
    align-items: center;
    vertical-align: middle;
    margin-top -3px
    font-size $-checkbox-font-size
    white-space nowrap
    cursor pointer
    &.kd-is-indeterminate, &.kd-is-checked
        .kd-checkbox-wrap
            border-color $-checkbox-checked-input-border-color
            background $-checkbox-checked-input-background-color
    &.kd-is-indeterminate
        .kd-checkbox-wrap:before
                border-bottom none
                transform rotate(90deg) scale(1)
    &.kd-is-checked
        .kd-checkbox-wrap:before
                transform rotate(45deg) scale(1)
    &.kd-is-disabled
        cursor not-allowed
        .kd-checkbox-wrap
            border-color $-checkbox-disabled-input-border-color
            background-color $-checkbox-disabled-input-background-color
            &:before
                border-color $-checkbox-disabled-icon-color

.kd-checkbox-wrap
    position relative
    display inline-block
    box-sizing border-box
    vertical-align middle
    flex: 0 0 auto;
    line-height 1
    outline none
    width $-checkbox-input-width
    height $-checkbox-input-height
    border 1px solid $-checkbox-default-input-border-color
    border-radius $-border-base-radius
    background $-checkbox-default-input-background-color
    transition all $-transition
    &:before
        content: ''
        display block
        box-sizing content-box
        position absolute
        top 1px
        left 4px
        width 3px
        height 7px
        border 1px solid $-checkbox-checked-icon-color
        border-top none
        border-left none
        transform-origin center
        transform rotate(45deg) scale(0)
        transition all $-transition

.kd-checkbox-input
    position absolute
    left 0
    right 0
    width 0
    height 0
    opacity 0
    outline none
.kd-checkbox-text
    display inline-block
    vertical-align: middle;
    margin-left 8px
    line-height 20px
