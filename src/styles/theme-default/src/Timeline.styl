$-dot-types = 'success' 'danger' 'primary'
.kd-timeline
    list-style none
// Several types of built-in colors
for item in $-dot-types
    .kd-timeline-item-head-{item}
        border-color @color
        color lookup('$-' + item + '-color')
.kd-timeline-item
    position relative
    margin 0
    padding 0 0 24px
    list-style none
    &-tail
        position absolute
        top 0
        left 5px
        height 100%
        border-left 1px solid #e5e5e5
    &-head
        position absolute
        top -6px
        margin 1px 0
        width 6px
        height 6px
        border 2px solid // transparent
        border-radius 6px
        background-color #fff
        left 5px
        transform translateX(-50%)
    &-head-custom
        position absolute
        margin-top 6px
        width 10px
        height 10px
        border 0
        border-radius 10px
        text-align center
        font-size 12px
        line-height 1
        transform translate(-50%, -50%)
    &-content
        position relative
        top -8px
        padding-left 18px
        font-size 12px
.kd-timeline-item:last-child
    .kd-timeline-item-tail
        display none
