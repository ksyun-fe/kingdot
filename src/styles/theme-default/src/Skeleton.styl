@import '../variables.styl';

 $-kd-skeleton-bg-type := 'p' 'first' 'last' 'button' 'box' 'round' 'title' 'img';

 $-kd-skeleton-height-type := 'p' 'first' 'last' 'title';

 for types in $-kd-skeleton-bg-type
      .kd-skeleton-item-{types}
          background: $-skeleton-bg-color

for types in $-kd-skeleton-height-type
      .kd-skeleton-item-{types}
          height: 20px          

.kd-skeleton-box
    .kd-skeleton-item-p
        width: 100%
        margin-top: 20px
        border-radius: $-skeleton-other-borderRadius
    .kd-skeleton-item-first
        width: 33%
        border-radius: $-skeleton-other-borderRadius
    .kd-skeleton-item-last
        width: 66%
        border-radius: $-skeleton-other-borderRadius
    .kd-skeleton-item-button    
        height: 40px
        width: 60px
        border-radius: $-skeleton-other-borderRadius
    .kd-skeleton-item-box    
        height: 100px
        width: 100px  
    .kd-skeleton-item-round    
        height: 100px
        width: 100px  
        border-radius: $-skeleton-round-borderRadius
    .kd-skeleton-item-title    
        width: 200px 
    .kd-skeleton-item-img    
        height: 200px
        width: 200px  
        .kd-skeleton-item-img-path  
            fill: $-skeleton-item-img-color
            
                     
.kd-skeleton-box-active 
     .kd-skeleton-item
      position: relative
      &::before{
                content: '';
                position: absolute;
                z-index: 30;
                left: 0%;
                width: 100%;
                height: 100%;
                background: $-skeleton-active-color
                background-size: 400% 100%;
                animation: sheen 1.4s ease infinite
                border-radius: 10px
            }
@keyframes sheen {
        0%   {background-position: 100% 50%;}

        100% {background-position: 0% 50%;}
            }            