@import "../variables.styl";
@import '../../common/motion/mixins.styl';
.kd-slider
    position relative
    display inline-block
    width 100%
    outline none
    padding 16px
.kd-slider-wrapper
    .kd-slider-main
        position relative
        height $-slider-height
        border-radius $-slider-border-radius
        background-color $-slider-bg-color
        cursor pointer
        user-select none
    .kd-slider-bar
        position absolute
        height 100%
        border-radius $-slider-border-radius
        background-color $-slider-bar-color
        transition all $-transition
    .kd-slider-handle
        position absolute
        z-index 1
        top 50%
        margin-top s('-%s', $-slider-handle-height / 2)
        margin-left s('-%s', $-slider-handle-width / 2)
        width $-slider-handle-width
        height $-slider-handle-height
        outline none
        border $-slider-handle-border
        border-radius $-slider-handle-border-radius
        background-color $-slider-handle-bg-color
        text-align center
        transition all $-transition
        transition all $-transition
        &:hover, &:focus
            background-color $-slider-handle-hover-bg-color
            cursor grab
            transform $-slider-handle-hover-transform
.kd-spinner-wrapper
    position absolute
    top 0
    right 16px
.kd-dragging
    .kd-slider-bar
        transition none
    .kd-slider-handle
        transition none
    .kd-slider-point-active
        background-color $-slider-handle-hover-bg-color
        cursor grabbing
        transform $-slider-handle-hover-transform
.kd-slider-disabled
    .kd-slider-main
        cursor not-allowed
    .kd-slider-bar
        background-color $-slider-disabled-color
    .kd-slider-handle
        border-color $-slider-disabled-color
        &:hover, &:focus
            background-color $-slider-handle-disabled-bg-color
            cursor not-allowed
            transform none
// stop point
.kd-slider-point
    position absolute
    top 0
    width $-slider-stop-point-width
    height $-slider-stop-point-height
    background-color $-input-bg-color
// show input
.kd-show-input
    .kd-slider-wrapper
        margin-right $-slider-input-width + 16px
.kd-show-range-input
    .kd-slider-wrapper
        margin-right $-slider-range-input-width + 16px
// marks
.kd-slider-marks
    position relative
    height $-slider-marks-height
    margin-top $-slider-marks-margin-top
    .kd-slider-marks-item
        position absolute
        white-space nowrap
        cursor pointer
        transform translateX(-50%)
        &:first-child
            transform none
        &:last-child
            transform translateX(-100%)
//
.kd-slider-input-range
    width 144px
    border $-input-border
    height 32px
    border-radius 4px
    background-color $-input-bg-color
    &:hover:not(.kd-slider-input-disabled)
        border $-input-focus-border
    div
        display inline-block
.kd-slider-input-focus
    border $-input-focus-border
.kd-slider-input-middle
    border-bottom 1px solid #ccc
    vertical-align 4px
    width 16px
    display inline-block

.kd-slider-input-disabled
    cursor not-allowed
    background-color #f2f2f2
    input
        cursor not-allowed
        background-color #f2f2f2
.kd-slider-single-input
    .kd-input-wrapper
        .kd-input-inner
            border none !important
            &:hover
                border none !important
.kd-slider-mark-active
    color $-slider-bar-color
