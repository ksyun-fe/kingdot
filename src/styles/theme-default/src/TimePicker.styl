.kd-timepicker-panel // 
    width: 172px;
    // max-height: 200px;
    // overflow-y: scroll;
    .kd-timepicker-title {
        margin: 10px 0px;
        text-align: center;
    }
    .kd-common-selector-container 
        width: 150px;
        margin: 0 auto;
        padding: 0px 10px;
        
    .kd-steptime-container
        max-height: 200px;
        overflow-y: scroll;
        .kd-steptime-item
            padding: 0 1.333333333333333em;
            height: 32px;
            line-height: 32px;
            cursor: pointer;

            &:hover
                background $-timepicker-item-hover-bg-color
            &.kd-active
                color $-timepicker-time-active-color
            &.kd-disabled
                color $-timepicker-time-disabled-color

