@import "../variables.styl"
.kd-form-item
    position relative
    margin 0 0 16px
    clearfix()
    &.kd-form-item-fluid
        width 100%
    .kd-label
        box-sizing border-box
        float left
        padding-right 10px
        font-size 12px
        line-height 32px
        text-align right
    .kd-form-item-content
        line-height 32px
        font-size 12px
        &.kd-form-item-error
            input
                border-color #f43
        .kd-form-item-validate-error
            position absolute
            color #f43
            font-size 12px
            white-space nowrap
    .kd-formItem-append
        display table-cell
        padding 0 10px
        vertical-align middle
