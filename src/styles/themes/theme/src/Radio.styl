@import "../variables.styl";

.kd-radio
    display inline-flex
    cursor pointer
    .kd-radio-wrapper
        width $-radio-width
        height $-radio-width
        display inline-block
        vertical-align middle
        border 1px solid $-radio-border-color
        border-radius 50%
        transition all $-transition
        position relative
        background $-radio-bg-color
        flex 0 0 auto
        // inner
        &:before
            content ""
            display block
            position absolute
            width $-radio-inner-width
            height $-radio-inner-width
            top 50%
            left 50%
            margin-left -(@width / 2)
            margin-top @margin-left
            border-radius 50%
            background-color $-radio-content-bg-color
            transform scale(0)
            transition all $-transition

    .kd-radio-input
        width 100%
        height 100%
        opacity 0
        cursor pointer
        position absolute
    .kd-radio-text
        vertical-align middle
        display inline-block
        margin-left $-radio-text-margin-left
        font-size 14px
        color $-radio-text-color
        flex 0 1 auto
        line-height 16px
    // checked
    &.kd-radio-checked
        .kd-radio-wrapper
            border-color $-radio-checked-border-color
            &:before
                background-color $-radio-content-bg-color
                transform scale(1)
    // disabled
    &.kd-radio-disabled
        color $-radio-disabled-color
        cursor not-allowed
        .kd-radio-wrapper
            border-color $-radio-disabled-border-color
            background $-radio-disabled-bg-color
            &:before
                background $-radio-disabled-inner-color
        .kd-radio-text
            color $-radio-disabled-color
    &.kd-radio-type
        display flex
        padding 4px 0
