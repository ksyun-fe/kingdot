@import "../variables.styl";
@import '../../mixin.styl'
.kd-dialog-container
    position absolute
    top 0
    left 0
    width 100%
    .kd-dialog-wrapper
        position fixed
        top 0
        left -20px
        right 20px
        bottom 0
    .kd-dialog
        position relative
        top 100px
        margin 0 auto
        background-color $-dialog-background-color
        box-shadow 0 0 8px 0 rgba(0,0,0,.06)
        border-radius 2px
        border-radius 4px
    .kd-dialog-mask
        position fixed
        top 0
        left 0
        width 100%
        height 100%
        background-color rgba(0, 0, 0, .3)
    .kd-dialog-footer
        position relative
        height 64px
        padding 0 20px 
        line-height 52px
        text-align right
    .kd-dialog-center
        text-align center
    .kd-dialog-line
        height 1px
        width 100%
        margin-bottom 4px
        background $-dialog-line-color
.kd-dialog
    .kd-dialog-header
        position relative
        height 48px
        padding 0 20px
        line-height 48px
        border-radius 4px 4px 4px 4px
        cursor move
        &.kd-dialog-header-backgroundColor
            background-color $-dialog-header-background-color
    .kd-dialog-title
        padding 0 4px
        font-family $-font-family
        font-size $-font-size
        color $-dialog-title-color
        letter-spacing 0
        line-height 16px
    .kd-dialog-close
        position relative
        width 100%
        height 44px
        line-height 44px
        cursor move
    .kd-dialog-icon
        position absolute
        right 25px
        top 0
        color #ccc
        cursor pointer
    .kd-dialog-body
        padding 20px 20px 32px
        text-align center
        word-wrap break-word
        word-break normal 
        color $-dialog-body-color
    .kd-dialog-footer-height
        height 16px
.kd-dialog-body
    .kd-icon-section
        display inline-block
        background-color #fff
        border-radius 50%
    .kd-dialog-icon-title
        font-family $-header-font-family
        line-height 20px
        font-size 16px
        color $-dialog-icon-title-color
    .kd-dialog-message
        padding 0 6px
        font-famil $-font-family
        text-align center
        line-height 20px
        font-size $-font-base-size
        color $-dialog-message-color
    .kd-dialog-confirm-title
        font-family $-header-font-family
        font-size 18px
        text-align center
        line-height 22px
        color $-dialog-confirm-title-color
        letter-spacing 0
    .kd-dialog-confirm-tips
        font-family $-font-family
        font-size $-font-size
        text-align center
        line-height 22px
        color $-dialog-confirm-tips-color
        letter-spacing 0
    .kd-dialog-icon-size-confirm
        font-size 50px
    &.kd-dialog-tips-body
        text-align left
        padding-left 30px
    .kd-dialog-icon-size-tips
        font-size 30px
        vertical-align middle
    &.kd-dialog-tips-body-center
        text-align center
        padding 20px 20px 32px
    .kd-dialog-icon-size-tips-center
        font-size 40px
    .kd-dailog-tips-icon
        margin-right 12px
    .kd-dialog-tips-title
        font-family $-header-font-family
        font-size 16px
        line-height 20px
        color $-dialog-tips-title-color
    .kd-dialog-tips-title-center
        display block
        padding 8px 0
    .kd-dialog-tips-message
        margin-left 40px
        font-family $-font-family
        font-size $-font-base-size 
        line-height 20px
        color $-dialog-tips-message-color
    .kd-dialog-tips-message-center
        margin-left 0
.kd-dialog-footer
    .kd-dialog-btn
        margin 0 4px
        padding 9px 16px
        border 1px solid $-dialog-btn-border-color
        border-radius 4px
        font-size $-font-base-size
        line-height 1
        cursor pointer
        &.kd-dialog-btn-default
            margin-right 8px
            background $-dialog-btn-default-background-color
            color $-dialog-btn-default-color
            &:hover,&:focus
                color $-dialog-btn-default-color-active
                border-color $-dialog-btn-default-hover
                background $-dialog-btn-default-hover-background-color
            &:active
                border-color $-dialog-btn-default-hover
                background-color $-dialog-btn-default-active-background-color
                color $-dialog-btn-default-color-active
        &.kd-dialog-btn-primary
            padding 10px 16px
            margin-left 8px
            background $-dialog-btn-primary-background-color
            border $-dialog-btn-primary-border
            color #fff
            &:hover,&:focus
                background $-dialog-btn-primary-hover
                border $-dialog-btn-primary-border
            &:active
                border $-dialog-btn-primary-border
                background $-dialog-btn-primary-active
        &.kd-dialog-btn-disabled
            background $-dialog-btn-disabled-background-color
            color $-dialog-btn-disabled-color
            cursor not-allowed
    .kd-dialog-btn-loading-disabled
        border-left-color #4c4c4c
        border-top-color #4c4c4c
    .kd-dialog-btn-loading
        display inline-block
        width 10px
        height 10px
        border 1px solid rgba(255, 255, 255, 0.3)
        border-left-color #ccc
        border-top-color #ccc
        border-radius 50%
        vertical-align middle
        animation loading 0.8s linear infinite
//进入和离开时的动画      
.kd-dialog-fade-enter-active 
  animation dialog-fade-in .3s

.kd-dialog-fade-leave-active 
  animation dialog-fade-out .3s
@keyframes dialog-fade-in {
  0% {
    transform: translate3d(0, -20px, 0);
    opacity: 0;
  }
  100% {
    transform: translate3d(0, 0, 0);
    opacity: 1;
  }
}

@keyframes dialog-fade-out {
  0% {
    transform: translate3d(0, 0, 0);
    opacity: 1;
  }
  100% {
    transform: translate3d(0, -20px, 0);
    opacity: 0;
  }
}
@keyframes loading {
   0%{
     transform: rotate(0deg);
     transform-origin: center;///旋转的基点位置，center表示从中间开始旋转
   }
   100%{
     transform: rotate(360deg);
     transform-origin: center;
   }
 }
// 内容区域有滚动条的时候
::-webkit-scrollbar 
    background-color: $-dialog-scrollbar-background-color
::-webkit-scrollbar-track
    background-color: $-dialog-scrollbar-background-color /* 滚动条的滑轨背景颜色 */ 
::-webkit-scrollbar-thumb
    background-color: $-dialog-scrollbar-thumb-color; /* 滑块颜色 */ 