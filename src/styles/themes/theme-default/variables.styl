//shape
$-btn-shape-round := $-shape-round
$-btn-shape-circle := $-shape-circle
//size

$-btn-large-padding := $-large-padding
$-btn-large-circle-padding := 14px
$-btn-large-font-size := 14px

$-btn-default-padding := $-default-padding
$-btn-default-circle-padding := 12px
