/******************************
            Page
*******************************/
// let height be odd 20 / 14
$-line-height := 1
// $-font-family := -apple-system,'PingFang SC',BlinkMacSystemFont,'Segoe UI','Hiragino Sans GB','Microsoft YaHei','Helvetica Neue',Helvetica,Arial,sans-serif !important
$-font-family := 'PingFangSC-Regular,Microsoft YaHei,微软雅黑,Arial,sans-serif' !important
$-font-size := 14px
$-font-base-size := 12px

$-title-color := #262626
$-text-default-color := #4C4C4C
//输出主题start
$-primary-color := $-blue
$-warning-color := $-yellow
$-danger-color := $-red
$-success-color := $-green

$-text-color := $-light-black   //主要正文颜色
$-text-list-color := #778088    //列表文字颜色
$-text-regular-color := #737373         //常规文字颜色
$-text-placeholder-color := #B2B2B2     //占位文字颜色


$-white-color := #FFF
$-black-color := #000

$-border-base-color := #CCC     //主要边框
$-border-light-color := #999999
$-border-second-light-color := #B2B2B2
$-border-three-light-color := #F2F2F2
$-split-line-color := #E5E5E5   //区域分割线

$-bg-base-color := #F3F4F7      //基础内容背景样式
$-table-header-bg-color :=#F3F6FB       //table,title等头部背景
$-table-content-bg-color :=#F4F7FC      //内容区

$-light-bg-color := #fff
$-dark-bg-color := #000
//输出主题end

//禁用样式
$-disabled-color := #CCC
$-disabled-bg-color := #F2F2F2
$-disabled-border-color := #CCC

// size
$-large-height := 40px
$-large-font-size := 14px
$-large-padding := 13px 24px

$-default-height := 32px
$-default-font-size := 14px
$-default-padding := 9px 16px

$-small-height := 24px
$-small-font-size := 12px
$-small-padding := 5px 8px

// $-mini-height := 26px
// $-mini-font-size := 12px
// $-mini-padding := 10px

// the gutter between icon and text
$-icon-text-gutter := 8px

// box-shadow
$-box-shadow := 0 0 15px 0 rgba(0,0,0,0.15);

$-border-radius := 4px

$-max-z-index := 9999

$-shape-round := 40px
$-shape-circle := 50%

/******************************
            Headers
*******************************/

$-header-font-family := 'PingFangSC-Medium' !important
$-header-margin := 0
$-header-font-weight := bold
$-h1 := 36px
$-h2 := 30px
$-h3 := 24px
$-h4 := 18px
$-h5 := 14px

/******************************
            Link
*******************************/

$-link-color := $-blue
$-link-underline := none
$-link-hover-color := palette($-link-color, -1)
$-link-hover-underline := $-link-underline
$-link-font-family := $-font-family

/******************************
            Code
*******************************/

$-code-font-family := Consolas, Menlo, Courier, monospace

/******************************
            Transition
*******************************/

$-transition := .25s ease-in-out

/******************************
            Spin
*******************************/

$-spin-color := $-primary-color
$-spin-width := unit(40 / 14, rem)
$-spin-stroke-width := 6

// size
$-spin-large-width := unit(48 / 14, rem)
$-spin-small-width := unit(32 / 14, rem)
$-spin-mini-width := unit(24 / 14, rem)

// font size
$-icon-default-font-size := unit(16 / 14, rem)
$-icon-large-font-size := unit(18 / 14, rem)
$-icon-small-font-size := unit(14 / 14, rem)
$-icon-mini-font-size := unit(12 / 14, rem)

/******************************
        ButtonGroup Button
*******************************/
//btn disabled
$-btn-disabled-color := $-border-base-color
$-btn-disabled-bg-color := $-disabled-bg-color
$-btn-disabled-border-color := $-disabled-border-color

